{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["ES2020"],
        "incremental": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["node"],
        "typeRoots": [
            "./node_modules/@types",
            "../../shared/types"
        ],
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "exclude": ["./node_modules", "node_modules"]    
}